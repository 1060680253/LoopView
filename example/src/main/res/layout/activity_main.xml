<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LoopViewPager"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横向切换"
            android:id="@+id/checkbox_hx"
            android:layout_gravity="right"
            android:checked="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动切换"
            android:id="@+id/checkbox_zd_loopviewpager"
            android:layout_gravity="right"
            android:checked="false" />
    </LinearLayout>

    <com.cry.loopviews.LoopViewPager
        android:id="@+id/loopViewPager"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:gravity="center_vertical"
        android:background="#334e4e4e">
    </com.cry.loopviews.LoopViewPager>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LoopView"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="半径动画"
            android:id="@+id/checkbox_r_animation"
            android:layout_gravity="right"
            android:checked="false"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横向切换"
            android:id="@+id/checkbox_hx_loopview"
            android:layout_gravity="right"
            android:checked="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动切换"
            android:id="@+id/checkbox_zd_loopview"
            android:layout_gravity="right"
            android:checked="false" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.cry.loopviews.LoopView
            android:id="@+id/loopView0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

        </com.cry.loopviews.LoopView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="90"
                android:id="@+id/seekBar_x" />
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="180"
                android:id="@+id/seekBar_z" />
            <CheckBox
                android:id="@+id/checkbox_use_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="使用TextView"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>