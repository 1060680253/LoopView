<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.cry.animation.LoopView
        android:id="@+id/loopview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:background="#334e4e4e">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/image_width">
                <ImageView
                    android:id="@+id/index0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/image_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="index1"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/image_shader"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/image_width">
                <ImageView
                    android:id="@+id/index1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/image_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="index1"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/image_shader"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/image_width">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/image_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="index1"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/image_shader"/>
        </LinearLayout>

    </com.cry.animation.LoopView>
</LinearLayout>
